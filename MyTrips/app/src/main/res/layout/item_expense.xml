<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:background="@drawable/bg_view_onclick">

    <ImageView
        android:id="@+id/ivPlanItem"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="@dimen/margin_normal_16"
        android:src="@drawable/payment"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivPlanItem"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvExpenseType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingLeft="@dimen/margin_normal_16"
            android:paddingTop="@dimen/margin_normal_16"
            android:paddingRight="@dimen/margin_normal_16"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="#e66d47"
            android:textStyle="bold"
            tools:text="expense" />

        <TextView
            android:id="@+id/tvExpenseAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingTop="@dimen/margin_normal_16"
            android:paddingRight="4dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            tools:text="20,000" />

        <TextView
            android:id="@+id/tvExpenseCurrency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/margin_normal_16"
            android:paddingRight="@dimen/margin_normal_16"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/colorIconInForm"
            tools:text="usd" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivPlanItem"
        app:layout_constraintTop_toBottomOf="@id/ll3">

        <TextView
            android:id="@+id/tvExpenseTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingLeft="@dimen/margin_normal_16"
            android:paddingRight="@dimen/margin_normal_16"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            tools:text="expense title" />

        <TextView
            android:id="@+id/tvExpensePlace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:background="@drawable/bg_view_onclick"
            android:drawableStart="@drawable/ic_location_plan_item"
            android:drawableTint="@color/colorPrimary"
            android:paddingRight="@dimen/margin_normal_16"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textStyle="bold"
            tools:text="City name" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivPlanItem"
        app:layout_constraintTop_toBottomOf="@id/ll">

        <TextView
            android:id="@+id/tvExpenseDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingLeft="@dimen/margin_normal_16"
            android:paddingRight="@dimen/margin_normal_16"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textColor="#5b5b5b"
            tools:text="Jan 1, 2019 08:09 PM" />


    </LinearLayout>


    <TextView
        android:id="@+id/tvExpenseDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_normal_16"
        android:paddingRight="32dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivPlanItem"
        app:layout_constraintTop_toBottomOf="@id/ll1"
        tools:text="plan description plan dede dede dede dede de dede" />

    <ImageView
        android:id="@+id/ivExpDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_view_onclick"
        android:paddingHorizontal="@dimen/margin_normal_8"
        android:paddingVertical="10dp"
        android:src="@drawable/ic_clear_item_detail"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/colorLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>